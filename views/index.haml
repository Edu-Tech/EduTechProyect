!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    
    %title EduTech
    / Bootstrap core CSS
    %link{:href => "/css/bootstrap.min.css", :rel => "stylesheet"}
    %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}/
    %link{:href => "/css/dashboard.css", :rel => "stylesheet"}
    %link{:href => "/css/mth-draw.css", :rel => "stylesheet"}
    %link{:href => "/css/grumble.min.css", :rel => "stylesheet"}
    %link{:href => "/css/games.css", :rel => "stylesheet"}
    %link{:href => "/css/notes.css", :rel => "stylesheet"}
    %link{:href => "/css/message.css", :rel => "stylesheet"}
    %link{:href => "/img/logo.png", :rel => "icon"}
    %script{:src => "/js/ie-emulation-modes-warning.js"}
    %script{:src => "/js/message.js"}
    %script{:src => "//code.jquery.com/jquery-1.10.2.min.js"}
    %script{:src => "//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"}
  %body
    .container-fluid
      .row
        .col-sm-2.col-md-2.sidebar
          %ul.nav.nav-sidebar
            %li.active
              %a{:href => "#"}
            %li
              %a{:href => "/notes"}
                %i.fa.fa-file-text
            %li
              %a{:href => "/game"}
                %i.fa.fa-gamepad
            %li
              %a{:href => "#"}
                %i.fa.fa-trophy
        .col-sm-12.col-md-12.col-xs-12.header
          .col-sm-12.col-lg-12.col-md-12.col-xs-12.user
            .col-sm-4.col-md-4.col-sm-offset-7.col-md-offset-7.col-xs-9.info
              #nombre
                = current_user.name
                = current_user.last_name
              #icons
                %a.btn{:href => "/message"}
                  %i.fa.fa-envelope
                - if (@alerts.to_i > 0)
                  .btn-group
                    %a.btn.dropdown-toggle{:href => "#", "data-toggle"=>"dropdown"}
                      %i.fa.fa-bell
                      %span.caret
                    %ul.dropdown-menu
                      %li.message-preview
                        %a{:href => "#"}
                          %h5.media-heading
                            %strong Memoria
                          %p.small.text-muted
                            %i.fa.fa-clock-o
                            4:32 PM
                          %p No crees que vas necesitas mejorar en memoria
                - else
                  %a.btn.dropdown-toggle{:href => "#"}
                    %i.fa.fa-bell-slash
                %a.btn{:href => "#"}
                  %i.fa.fa-cog
                %a.btn{:href => "/logout"}
                  %i.fa.fa-power-off
            .col-sm-1.col-md-1.col-xs-3.imagen
              %img.img-responsive.img-circle.avatar{:src => "/img/kid_girl.png"}/
            
        .col-sm-12.col-md-12.col-xs-12.main 
          =yield

    